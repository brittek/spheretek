    .hero h1 {
      font-size: 3rem;
      margin-bottom: 1rem;
      line-height: 1.2;
      animation: fadeInDown var(--transition) forwards;
    }

    .hero p {
      font-size: 1.25rem;
      margin-bottom: 2rem;
      color: var(--text-secondary);
